<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".ActivityOutput">
    <EditText
        android:inputType="number"
        android:id="@+id/et_numbera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_number_a"/>
    <EditText
        android:inputType="number"
        android:id="@+id/et_numberb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_number_b"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/bt_sart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_activity_result"/>

</LinearLayout>